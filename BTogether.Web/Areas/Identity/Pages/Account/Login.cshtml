@page "/Login/"
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/css/util.css" />
}
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
            <form class="login100-form flex-sb flex-w" id="account" method="post">
                <span class="login100-form-title p-b-53">
                    Login
                </span>
                
                <div class="p-t-31 p-b-9">
                    <span class="txt1">
                        Username
                    </span>
                </div>
                <div class="wrap-input100">
                    <input asp-for="Input.Username" class="input100" autocomplete="username" aria-required="true" />
                    <span class="focus-input100"></span>
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>

                <div class="p-t-13 p-b-9">
                    <span class="txt1">
                        Password
                    </span>

                    <a href="#" class="txt2 bo1 m-l-5">
                        Forgot?
                    </a>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <input asp-for="Input.Password" class="input100" autocomplete="current-password" aria-required="true" />
                    <span class="focus-input100"></span>
                </div>

                <div class="container-login100-form-btn m-t-17">
                    <button class="login100-form-btn">
                        Sign In
                    </button>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="w-full text-center p-t-55">
                    <span class="txt2">
                        Not a member?
                    </span>

                    <a href="#" class="txt2 bo1">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign up now</a>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/login.js"></script>
}
