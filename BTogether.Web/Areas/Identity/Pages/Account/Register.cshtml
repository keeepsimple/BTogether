@page "/Register/"
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/css/util.css" />
}
<div class="limiter">
    <div class="container-login100 ">
        <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33 mt-3 mb-3">
            <form class="login100-form flex-sb flex-w" id="registerForm" method="post">
                <span class="login100-form-title p-b-53">
                    Register
                </span>
                <div class="p-t-31 p-b-9">
                    <span class="txt1">
                        Full Name
                    </span>
                </div>
                <div class="wrap-input100">
                    <input asp-for="Input.FullName" class="input100" autocomplete="username" aria-required="true" />
                    <span class="focus-input100"></span>
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>

                <div class="p-t-31 p-b-9">
                    <span class="txt1">
                        Username
                    </span>
                </div>
                <div class="wrap-input100">
                    <input asp-for="Input.Username" class="input100" autocomplete="username" aria-required="true" />
                    <span class="focus-input100"></span>
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>

                <div class="p-t-31 p-b-9">
                    <span class="txt1">
                        Email
                    </span>
                </div>
                <div class="wrap-input100">
                    <input asp-for="Input.Email" class="input100" autocomplete="username" aria-required="true" />
                    <span class="focus-input100"></span>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="p-t-31 p-b-9">
                    <span class="txt1">
                        Birth Year
                    </span>
                </div>
                <div class="wrap-input100">
                    <input asp-for="Input.BirthYear" class="input100" autocomplete="username" aria-required="true" />
                    <span class="focus-input100"></span>
                    <span asp-validation-for="Input.BirthYear" class="text-danger"></span>
                </div>

                <div class="p-t-13 p-b-9">
                    <span class="txt1">
                        Password
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <input asp-for="Input.Password" class="input100" autocomplete="current-password" aria-required="true" />
                    <span class="focus-input100"></span>
                </div>

                <div class="p-t-13 p-b-9">
                    <span class="txt1">
                        Confirm Password
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <input asp-for="Input.ConfirmPassword" class="input100" autocomplete="current-password" aria-required="true" />
                    <span class="focus-input100"></span>
                </div>

                <div class="container-login100-form-btn m-t-17">
                    <button class="login100-form-btn">
                        Register
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/login.js"></script>
}

